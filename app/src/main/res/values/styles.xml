<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>

        <!-- Elements appear under semi-transparent status bar -->
        <item name="android:windowTranslucentStatus">true</item>

        <!--Style used in custom view CheckOptionItem -->
        <item name="optionItemStyle">@style/OptionItem</item>
    </style>

    <style name="BaseFooterActionItemStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/google_grey800</item>
    </style>
    <style name="FooterActionItemStyle" parent="@style/BaseFooterActionItemStyle" />
    <style name="FooterClickableActionItemStyle" parent="@style/FooterActionItemStyle">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="DividerStyle">
        <item name="android:background">@color/account_menu_divider_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="NavigationViewStyle" >
        <item name="android:listDivider">@color/colorDivider</item>
        <item name="itemBackground">@drawable/navigation_item_background</item>
        <item name="itemTextColor">@color/navigation_item_color</item>
    </style>

    <style name="BottomSheetTasksListStyle">
        <!-- Dialog is Fullscreen -->
        <item name="android:windowIsFloating">false</item>

        <!-- Dialog has transparent background -->
        <item name="android:windowBackground">@android:color/transparent</item>

        <!-- Elements appear under semi-transparent status bar -->
        <item name="android:windowIsTranslucent">true</item>

        <!-- Dark Background under dialog -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="ThemeOverlay.GoogleMaterial.Dark.ActionBar" parent="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.AppBarOverlay" parent="@style/ThemeOverlay.GoogleMaterial.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="actionMenuTextAppearance">@style/CustomToolbarMenuTextAppearance</item>
        <item name="actionMenuTextColor">@color/google_blue600</item>
    </style>

    <style name="CustomToolbarMenuTextAppearance" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/google_blue600</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomSheetModalDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:textColor">@color/google_grey800</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/Widget.GoogleMaterial.BottomSheet.Modal</item>
    </style>

    <style name="Widget.GoogleMaterial.BottomSheet.Modal" parent="@style/Widget.MaterialComponents.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_dialog_fragment_background</item>
    </style>

    <style name="OptionItemTextAppearance" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">@dimen/small_font_size</item>
    </style>
    <style name="OptionItem">
        <item name="android:textAppearance">@style/OptionItemTextAppearance</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:paddingLeft">@dimen/option_item_horiz_spacing</item>
        <item name="android:paddingTop">@dimen/option_item_vertical_spacing</item>
        <item name="android:paddingRight">@dimen/option_item_horiz_spacing</item>
        <item name="android:paddingBottom">@dimen/option_item_vertical_spacing</item>
        <item name="android:textColor">@drawable/text_color</item>
    </style>
    <style name="BottomSheetMenu">
        <item name="android:paddingTop">@dimen/option_item_vertical_spacing</item>
        <item name="android:paddingBottom">@dimen/option_item_vertical_spacing</item>
    </style>
    <style name="OptionMenuTitle">
        <item name="android:textAppearance">@style/OptionMenuTitleTextAppearance</item>
        <item name="android:textColor">@color/google_grey700</item>
        <item name="android:paddingLeft">@dimen/option_item_horiz_spacing</item>
        <item name="android:paddingTop">@dimen/option_item_vertical_spacing</item>
        <item name="android:paddingRight">@dimen/option_item_horiz_spacing</item>
        <item name="android:paddingBottom">@dimen/option_item_vertical_spacing</item>
    </style>
    <style name="OptionMenuTitleTextAppearance" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">?android:textColorTertiary</item>
    </style>

</resources>
